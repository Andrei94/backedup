<AnchorPane minHeight="300.0" minWidth="400.0" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginDialog">
	<VBox alignment="CENTER" layoutX="131.0" layoutY="50.0" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
		<Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
			<font>
				<Font size="30.0" />
			</font>
		</Text>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
			<padding>
				<Insets right="30.0" />
			</padding>
			<Label alignment="CENTER_RIGHT" minWidth="100.0" text="Username" />
			<TextField fx:id="username" HBox.hgrow="ALWAYS" />
		</HBox>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
			<padding>
				<Insets right="30.0" />
			</padding>
			<Label alignment="CENTER_RIGHT" minWidth="100.0" text="Password" />
			<PasswordField fx:id="password" HBox.hgrow="ALWAYS" />
		</HBox>
		<Text fx:id="loginResult" />
		<ProgressIndicator fx:id="loginIndicator" visible="false" />
      <VBox />
		<HBox alignment="CENTER" prefHeight="40.0" prefWidth="390.0" spacing="10">
			<opaqueInsets>
				<Insets />
			</opaqueInsets>
			<padding>
				<Insets right="30.0" />
			</padding>
			<Button defaultButton="true" minWidth="70.0" mnemonicParsing="false" onAction="#login" text="Login" />
			<Button alignment="CENTER" cancelButton="true" contentDisplay="CENTER" minWidth="70.0" mnemonicParsing="false" onAction="#close" text="Cancel" />
		</HBox>
	</VBox>
</AnchorPane>
